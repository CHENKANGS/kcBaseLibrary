<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tool="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/layout_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >
        <ImageView
            android:id="@+id/iv_url"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@mipmap/zx_icon"
            android:scaleType="centerCrop"
            />
        <TextView
            android:id="@+id/zx_count_tv"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@mipmap/msg_circles"
            android:layout_alignTop="@+id/iv_url"
            android:layout_toRightOf="@+id/iv_url"
            android:layout_marginLeft="-8dp"
            android:textColor="@color/white"
            android:visibility="gone"
            android:gravity="center"
            android:textSize="10sp"
            android:padding="2dp"
            />
        <TextView
            android:id="@+id/zx_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_url"
            tool:text="有谁这样曾经这样伤害过你？"
            android:textColor="@color/textcolor_black"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/zx_tv_excerpt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/zx_tv_title"
            android:layout_below="@id/zx_tv_title"
            android:visibility="gone"
            android:layout_marginTop="5dp"
            android:text="汽车知识【汽车知识】"
            android:textColor="@color/gray"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_url"
            android:layout_toRightOf="@id/iv_url"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/zx_tv_hot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tool:text="人气5869"
                android:textColor="@color/gray"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/zx_wd_tv"
                tool:text="已读"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:background="@drawable/zx_wd_tv_bg"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textColor="@color/white"
                android:textSize="12sp"
                />
        </LinearLayout>
    </RelativeLayout>
    <View
        style="@style/line" android:layout_marginLeft="10dp"
        />
</LinearLayout>