<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:id="@+id/loadingStateRelativeLayout"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">
        <ProgressBar
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="0dp"
            android:id="@+id/progress1"
            android:indeterminateDrawable="@drawable/progress_gear_fu"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ProgressBar
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/progress2"
            android:layout_marginTop="-30dp"
            android:layout_marginRight="-30dp"
            android:indeterminateDrawable="@drawable/progress_gear_fu"
            android:layout_below="@+id/progress1"
            android:layout_toLeftOf="@+id/progress1"
            android:layout_toStartOf="@+id/progress1" />

        <ProgressBar
            android:id="@+id/progress3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="-20dp"
            android:indeterminateDrawable="@drawable/progress_gear_fu"
            android:layout_below="@+id/progress1"
            android:layout_toRightOf="@+id/progress1"
            android:layout_toEndOf="@+id/progress1" />

        <ProgressBar
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/progress4"
            android:layout_below="@+id/progress2"
            android:indeterminateDrawable="@drawable/progress_gear"
            android:layout_alignLeft="@+id/progress1"
            android:layout_alignStart="@+id/progress1" />

        <ProgressBar
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="-20dp"
            android:id="@+id/loadingStateProgressBar"
            android:indeterminateDrawable="@drawable/progress_gear_fu"
            android:layout_below="@+id/progress4"
            android:layout_toRightOf="@+id/progress4"
            android:layout_toEndOf="@+id/progress4" />
    </RelativeLayout>
</RelativeLayout>