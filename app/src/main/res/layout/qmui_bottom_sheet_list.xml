<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/qmui_bottom_sheet_title_bg"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="?attr/qmui_bottom_sheet_title_height"
            android:background="?attr/qmui_bottom_sheet_title_bg"
            android:ellipsize="middle"
            android:gravity="center"
            android:paddingLeft="?attr/qmui_bottom_sheet_list_item_padding_horizontal"
            android:paddingRight="?attr/qmui_bottom_sheet_list_item_padding_horizontal"
            android:singleLine="true"
            android:textAppearance="?attr/qmui_bottom_sheet_title_appearance"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/image_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:paddingLeft="?attr/qmui_bottom_sheet_list_item_padding_horizontal"
            android:paddingRight="?attr/qmui_bottom_sheet_list_item_padding_horizontal"
            android:src="@mipmap/dialog_close"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/qmui_config_color_white"
        android:text="事故责任"
        android:textSize="16sp"
        android:visibility="gone"
        android:gravity="center"/>

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/qmui_config_color_white"
        android:divider="@null"
        android:dividerHeight="0dp"/>
    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:visibility="gone"
        android:text="确定"
        android:layout_gravity="center"
        />
</LinearLayout>
